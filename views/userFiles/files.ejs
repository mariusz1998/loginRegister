<button id="buttonAttr">Show attribute</button>

<!-- The Modal -->
<div id="myModal" class="modal">
  <!-- Modal content -->
  <div class="modal-content">
	<span class="close">&times;</span>
	<p id="fileAttrText"></p>
  </div>

</div>
